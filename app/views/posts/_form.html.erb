<%= form_for @post, :html =>{:multipart =>true} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  
   
  <div class="field">
   
    <%= f.text_field :title , :placeholder =>"Post Title"%>
  </div>
  <div class="field">
    
    <%= f.text_area :content ,:placeholder => "Enter your content here",:class=>"expand"%>
    
  </div>

<div class="field">
	<%=f.file_field :avatar%>
	</div>
 
  <div class="actions">
    <%= f.submit "Add Post", :class=>"btn"%>
  </div>
<% end %>
