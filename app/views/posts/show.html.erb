<p id="notice">
	<%= notice %>
</p>

<h1> <%= @post.title %></h1>
<hr/>
<p>
	<%= image_tag  @post.avatar_url.to_s%>
	<%= raw @post.content %>
	
</p>
 
<p>
  <b>Tags:</b>
  <%= @post.tags.map { |t| t.name }.join(", ") %>
</p>
 
 
<%=render @post.comments%>

<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
